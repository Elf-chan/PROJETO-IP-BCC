#include <stdio.h>
#include <stdlib.h>
#include<windows.h>
#include <string.h>
#include <conio.h>



	void gotoxy(int x,int y)
	{	COORD p={x,y};
		SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE),p);
	}



	void textcolor(int newcolor)
{
   CONSOLE_SCREEN_BUFFER_INFO csbi;

   GetConsoleScreenBufferInfo(GetStdHandle(STD_OUTPUT_HANDLE), &csbi);
   SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE),
      (csbi.wAttributes & 0xf0) | newcolor);

}


main()
{
		int resposta,enter, movimento=0,movimentosubir=0,auxiliar,y;
		char resp;

					gotoxy(6,4);
					printf("%c",175);
					auxiliar=4;

			do{

					if(resp==80)
					{
						++movimento;
						y=auxiliar+movimento;
						if(y>8)
					    {
					    	movimento=0;
					    	movimento++;
					    	auxiliar=3;
					    	y=auxiliar+movimento;
						}

					}
					else if(resp==72)
					{
						++movimentosubir;
						y=auxiliar-movimentosubir;
						if(y<4)
					    {
					    	movimentosubir=0;
					    	++movimentosubir;
					    	auxiliar=9;
					    	y=auxiliar-movimentosubir;
						}

					}
					system("cls");
						gotoxy(6,y);
						textcolor(6);

						printf("%c",175);
						gotoxy(10,4);
						textcolor(15);
						if(y==4)
                        {
                           textcolor(6);
                        }


						printf("Cadastrar Usuario;");
						textcolor(15);

						gotoxy(10,5);
						if(y==5)
                        {
                           textcolor(6);
                        }
						printf("Cadastrar funcionarios;");

						textcolor(15);
						gotoxy(10,6);
						if(y==6)
                        {
                           textcolor(6);
                        }
						printf("Cadastrar de fornecedor;");

						textcolor(15);
						gotoxy(10,7);
						if(y==7)
                        {
                           textcolor(6);
                        }
						printf("Cadastrar de jogos;") ;

						textcolor(15);
						if(y==8)
                        {
                           textcolor(6);
                        }
						gotoxy(10,8);
					    printf("Produtos;");

					resp=getch();
				}while(resp!='o');
				if(resp=='o')
				{
					system("cls");
					exit;
				}

}
