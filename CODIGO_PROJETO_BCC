void Login(TUsuario adm)
{
    system("cls");


    TUsuario usuario;

    Janela();
    //Cor_do_BG(15);
    system("color F0");

    textcolor(0);
    //Janela do usuario e senha
    {
        int i;

    gotoxy(9,11);
    printf("%c",186);

    gotoxy(9,12);
    printf("%c",204);
    gotoxy(9,10);
    printf("%c",201);
    for(i=10;i<35;i++)
    {
        gotoxy(i,10);
        printf("%c",205);
    }
    for(i=10;i<35;i++)
    {
        gotoxy(i,12);
        printf("%c",205);
    }

    gotoxy(35,12);
    printf("%c",185);

    gotoxy(35,10);
    printf("%c",187);

    gotoxy(35,11);
    printf("%c",186);

    //Janela senha
    for(i=10;i<35;i++)
    {
        gotoxy(i,14);
        printf("%c",205);
    }

    gotoxy(35,14);
    printf("%c",188);

    gotoxy(35,13);
    printf("%c",186);

    gotoxy(9,13);
    printf("%c",186);

    gotoxy(9,14);
    printf("%c",200);

    }



    gotoxy(10,11);
    printf("Usuario:");
    gotoxy(10,13);
    printf("Senha:");

    Cadeado_Fechado();

    int cont=0,i,j;

    do
    {
        cont=0;

        for(i=0;i<10;i++)
        {
           usuario.senha[i]=' ';
        }

        gotoxy(19,11);
        gets(usuario.usuario);
        j=17;
        for(i=0;i<10;i++)
        {

            gotoxy(j,13);
            usuario.senha[i]=getch();

            if(usuario.senha[i]==13)
            {
                break;
            }
            else if(usuario.senha[i]==8)
            {
                gotoxy(j-1,13);
                printf(" ");
                j--;
                i--;
            }

            else
            {
                cont++;
                j++;
               printf("*");
            }

        }
        j=0;
        for(i=0;i<cont;i++)
        {
            if(adm.senha[i]!=usuario.senha[i])
            {
                j++;
            }

        }
        if(strcmp(usuario.usuario,adm.usuario)!=0 || j!=0)
        {
            gotoxy(10,15);
            printf("Usuario ou senha incorretos.");
            gotoxy(10,16);
            printf("Tente novamente\n\n\n\n\n\n");

            Sleep(1000);
            //Para apagar as linhas
            gotoxy(19,11);
            printf("              ");
            gotoxy(17,13);
            printf("               ");
            gotoxy(10,15);
            printf("                            ");
            gotoxy(10,16);
            printf("               ");
        }
    }while(strcmp(usuario.usuario,adm.usuario)!=0 || j!=0);
    Cadeado_abrindo();
}
void Jogo()
{
    char opcao;
    int i,j,x=55,var=0,points=0, erro=0;
    bool fecha=true;




    int correcao_coluna=30;

do
{


    while(!kbhit())
    {
        textcolor(2);
        gotoxy(9+correcao_coluna,23);

        printf("%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c",178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178);
        textcolor(0);
        gotoxy(18+correcao_coluna,19);
        printf("            ",points);
        gotoxy(18+correcao_coluna,19);
        printf("Points:%i",points);

        if(opcao==' ')
        {


            gotoxy(10+correcao_coluna,21);
            printf(" ");
            gotoxy(11+correcao_coluna,21);
            printf(" ");
            gotoxy(12+correcao_coluna,21);
            printf(" ");
            gotoxy(10+correcao_coluna,22);
            printf(" ");
            gotoxy(12+correcao_coluna,22);
            printf(" ");

            textcolor(0);
            gotoxy(11+correcao_coluna,19);
            printf("%c",1);
            gotoxy(10+correcao_coluna,19);
            printf("\\");
            gotoxy(12+correcao_coluna,19);
            printf("/");
            gotoxy(10+correcao_coluna,20);
            printf("_");
            gotoxy(11+correcao_coluna,20);
            printf("|");
            gotoxy(12+correcao_coluna,20);
            printf("_");

            if(x==11+correcao_coluna)
            {
                points++;
            }



        }
        else
        {
            gotoxy(11+correcao_coluna,19);
            printf(" ");
            gotoxy(10+correcao_coluna,19);
            printf(" ");
            gotoxy(12+correcao_coluna,19);
            printf(" ");
            gotoxy(10+correcao_coluna,20);
            printf(" ");
            gotoxy(12+correcao_coluna,20);
            printf(" ");

            textcolor(0);
            gotoxy(11+correcao_coluna,20);
            printf("%c",1);
            gotoxy(10+correcao_coluna,21);
            printf("/");
            gotoxy(11+correcao_coluna,21);
            printf("|");
            gotoxy(12+correcao_coluna,21);
            printf("\\");
            gotoxy(10+correcao_coluna,22);
            printf("/");
            gotoxy(12+correcao_coluna,22);
            printf("\\");

            if(erro==0)
            {
                if(x==11+correcao_coluna||x==10+correcao_coluna||x==12+correcao_coluna)
                {
                        gotoxy(18+correcao_coluna,20);
                        printf("You hit the block. -2pts.");
                        points-=2;

                    erro++;
                }
            }


        }
        if(x<10+correcao_coluna)
        {
            erro=0;
        }
        if(x==16+correcao_coluna)
        {
            gotoxy(18+correcao_coluna,20);
            printf("                         ");
        }


        if(x>correcao_coluna)
        {
          x--; gotoxy(x,22); printf("^");
          gotoxy(x+1,22); printf(" ");
        }
        if(x==8+correcao_coluna)
        {   gotoxy(x,22);
            printf(" ");
            x=51+correcao_coluna;
        }

        if(var==5)
        {
            var=0;
            opcao='a';
        }
        var++;

        Sleep(50);


    }

        opcao=getch();
        var=0;

        if(opcao=='x'||opcao=='X')
        {
            fecha=false;
            break;
        }
        else
        {
            _beginthread(Musica,0,NULL);
        }


}while(fecha);

}
void Tela_de_Carregamento()
{

    char opcao;
    int i,j,x=55,var=0, percentual=45,num=0,p=0,points=0, erro=0;
    bool fecha=true;
    textcolor(0);
    //Cor_do_BG(15);
    system("color F0");
    Janela();
    Logo(50,1);

    int correcao_coluna=30;

do
{


    while(!kbhit()&&num<=100)
    {

        if(num<=100)
        {
            gotoxy(14+correcao_coluna,15);
            printf("_____________________________");
            gotoxy(14+correcao_coluna,16);
            printf("|");
            gotoxy(14+correcao_coluna,17);
            printf("%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c",238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238);
            gotoxy(42+correcao_coluna,6);
            printf("|");

            textbackground(0);
            gotoxy(percentual,16);
            printf("%c",219);
            textbackground(15);
            gotoxy(44+correcao_coluna,16);
            printf("%i%%",num);

            num++;
            if(num%3==0)
            {
               p++;
            }

            if(p%4==0)
            {
                percentual++;
            }


        }
        textcolor(2);
        gotoxy(9+correcao_coluna,23);

        printf("%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c",178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178,178);
        textcolor(0);
        gotoxy(18+correcao_coluna,19);
        printf("            ",points);
        gotoxy(18+correcao_coluna,19);
        printf("Points:%i",points);

        if(opcao==' ')
        {


            gotoxy(10+correcao_coluna,21);
            printf(" ");
            gotoxy(11+correcao_coluna,21);
            printf(" ");
            gotoxy(12+correcao_coluna,21);
            printf(" ");
            gotoxy(10+correcao_coluna,22);
            printf(" ");
            gotoxy(12+correcao_coluna,22);
            printf(" ");

            textcolor(0);
            gotoxy(11+correcao_coluna,19);
            printf("%c",1);
            gotoxy(10+correcao_coluna,19);
            printf("\\");
            gotoxy(12+correcao_coluna,19);
            printf("/");
            gotoxy(10+correcao_coluna,20);
            printf("_");
            gotoxy(11+correcao_coluna,20);
            printf("|");
            gotoxy(12+correcao_coluna,20);
            printf("_");

            if(x==11+correcao_coluna)
            {
                points++;
            }



        }
        else
        {
            gotoxy(11+correcao_coluna,19);
            printf(" ");
            gotoxy(10+correcao_coluna,19);
            printf(" ");
            gotoxy(12+correcao_coluna,19);
            printf(" ");
            gotoxy(10+correcao_coluna,20);
            printf(" ");
            gotoxy(12+correcao_coluna,20);
            printf(" ");

            textcolor(0);
            gotoxy(11+correcao_coluna,20);
            printf("%c",1);
            gotoxy(10+correcao_coluna,21);
            printf("/");
            gotoxy(11+correcao_coluna,21);
            printf("|");
            gotoxy(12+correcao_coluna,21);
            printf("\\");
            gotoxy(10+correcao_coluna,22);
            printf("/");
            gotoxy(12+correcao_coluna,22);
            printf("\\");

            if(erro==0)
            {
                if(x==11+correcao_coluna||x==10+correcao_coluna||x==12+correcao_coluna)
                {
                        gotoxy(18+correcao_coluna,20);
                        printf("You hit the block. -2pts.");
                        points-=2;

                    erro++;
                }
            }


        }
        if(x<10+correcao_coluna)
        {
            erro=0;
        }
        if(x==16+correcao_coluna)
        {
            gotoxy(18+correcao_coluna,20);
            printf("                         ");
        }


        if(x>correcao_coluna)
        {
          x--; gotoxy(x,22); printf("^");
          gotoxy(x+1,22); printf(" ");
        }
        if(x==8+correcao_coluna)
        {   gotoxy(x,22);
            printf(" ");
            x=51+correcao_coluna;
        }

        if(var==5)
        {
            var=0;
            opcao='a';
        }
        var++;

        Sleep(50);


    }
    if(num<100)
    {
        opcao=getch();
        var=0;
        _beginthread(Musica,0,NULL);
    }


}while(num<100);

    gotoxy(18+correcao_coluna,17);
    printf("O CARREGAMENTO FOI FINALIZADO.");
    gotoxy(18+correcao_coluna,20);
    printf("DESEJA CONTINUAR A JOGAR?(S/N)");
    opcao=getch();


    if(opcao=='s'||opcao=='S')
    {
        system("cls");
        system("color F0");

        textcolor(0);

        p=0;
        percentual=45;


        gotoxy(14+correcao_coluna,15);
            printf("_____________________________");
            gotoxy(14+correcao_coluna,16);
            printf("|");
            gotoxy(14+correcao_coluna,17);
            printf("%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c%c",238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238,238);
            gotoxy(42+correcao_coluna,16);
            printf("|");

            for(percentual=45;percentual<72;percentual++)
            {       textbackground(0);
                    gotoxy(percentual,16);
                    printf("%c",219);
            }
            textbackground(15);
            num=100;
            gotoxy(44+correcao_coluna,16);
            printf("%i%%",num);
            gotoxy(15+correcao_coluna,25);
        printf("Para parar de jogar aperte X");

        Logo(50,1);
        Jogo();


    }

}
void Cor_do_BG(int cor)
{
    int i,j;

    textbackground(cor);
    for(i=1;i<27;i++)
    {
        for(j=1;j<121;j++)
        {
            gotoxy(j,i);
            printf(" ");
        }

    }
}
void Area_de_Trabalho()
{   //area que tem os menus

    Janela();

    //Cor_do_BG(15);
    system("Color 3F");
    Logo(50,12);




    int resposta,enter, movimento=0,movimentosubir=0,auxiliar,x,y,i,j;
    bool fecha=true;
		char resp;

                    textbackground(7);
                    for(i=3;i<6;i++)
                    {
                        for(j=1;j<121;j++)
                        {
                            gotoxy(j,i);
                            printf(" ");
                        }
                    }

					gotoxy(6,4);
					printf("%c",175);
					x=10;

			do{
                            textcolor(15);

                            textbackground(8);
                            for(i=3;i<6;i++)
                            {
                                for(j=x-5;j<x+15;j++)
                                {
                                    gotoxy(j,i);
                                    printf(" ");
                                }
                            }

                     textbackground(7);
                    if(x==10)
                    {
                            textbackground(8);
                    }
                    gotoxy(10,4);
                    printf("FUNCIONARIOS");
                    textbackground(7);

                    if(x==30)
                    {
                            textbackground(8);

                    }

                    gotoxy(30,4);
                    printf("FORNECEDORES");

                    textbackground(7);

                    if(x==50)
                    {
                            textbackground(8);

                    }

                    gotoxy(50,4);
                    printf("PRODUTOS");

                    textbackground(7);

                    if(x==70)
                    {
                            textbackground(8);

                    }

                    gotoxy(70,4);
                    printf("SAIR");

                    textbackground(7);

                            gotoxy(0,26);
                            resp=getch();


                            if(resp==75)
                            {

                                _beginthread(Musica_opcao,0,NULL);

                                textbackground(7);
                                for(i=3;i<6;i++)
                                {
                                    for(j=x-5;j<x+15;j++)
                                    {
                                        gotoxy(j,i);
                                        printf(" ");
                                    }
                                }

                                x=x-20;
                                if(x<10)
                                {
                                    x=70;

                                }


                            }
                            else if(resp==77)
                            {
                                _beginthread(Musica_opcao,0,NULL);

                                textbackground(7);
                                for(i=3;i<6;i++)
                                {
                                    for(j=x-5;j<x+15;j++)
                                    {
                                        gotoxy(j,i);
                                        printf(" ");
                                    }
                                }

                                x=x+20;
                                if(x>70)
                                {
                                    x=10;
                                }
                            }
                            else if(resp==13)
                            {
                                Beep(408,100);
                                switch(x)
                                {
                                case 10:
                                    {
                                        y=6;
                                        do
                                        {
                                            textbackground(8);
                                                for(i=6;i<12;i++)
                                                {
                                                    for(j=x-5;j<x+15;j++)
                                                    {
                                                        gotoxy(j,i);
                                                        printf(" ");
                                                    }
                                                }

                                                textbackground(7);
                                                for(i=y;i<y+2;i++)
                                                {
                                                    for(j=x-5;j<x+15;j++)
                                                    {
                                                        gotoxy(j,i);
                                                        printf(" ");
                                                    }
                                                }
                                                textbackground(8);
                                                 if(y==6)
                                                 {
                                                     textbackground(7);
                                                 }
                                                gotoxy(x,6);
                                                printf("CADASTRAR");

                                                textbackground(8);

                                                if(y==8)
                                                 {
                                                     textbackground(7);
                                                 }

                                                gotoxy(x,8);
                                                printf("CONSULTAR");

                                                textbackground(8);

                                                if(y==10)
                                                 {
                                                     textbackground(7);
                                                 }

                                                gotoxy(x,10);
                                                printf("RETORNAR");

                                                textbackground(8);

                                                gotoxy(0,25);
                                                resp=getch();

                                                if(resp==72)
                                                {
                                                    _beginthread(Musica_opcao,0,NULL);
                                                    textbackground(8);
                                                    for(i=y;i<y+2;i++)
