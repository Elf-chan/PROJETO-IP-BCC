                                                        {
                                                            gotoxy(j,i);
                                                            printf(" ");
                                                        }
                                                    }
                                                    y=y-2;
                                                    if(y<6)
                                                    {
                                                        y=10;
                                                    }
                                                }
                                                else if(resp==80)
                                                {
                                                    _beginthread(Musica_opcao,0,NULL);
